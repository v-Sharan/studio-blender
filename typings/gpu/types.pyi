from typing import Optional, Sequence, Union

class GPUShader:
    def bind(self) -> None: ...
    def uniform_bool(self, name: str, value: Union[bool, Sequence[bool]]) -> None: ...
    def uniform_float(
        self, name: str, value: Union[float, Sequence[float]]
    ) -> None: ...
    def uniform_int(self, name: str, value: Union[int, Sequence[int]]) -> None: ...

class GPUBatch:
    def draw(self, program: Optional[GPUShader] = None) -> None: ...
